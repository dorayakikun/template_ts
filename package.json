{
  "name": "template_ts",
  "version": "0.1.0",
  "description": "A project template for the TypeScript library.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "fix": "eslint --fix --ext .ts .",
    "lint": "eslint --ext .ts .",
    "test": "jest",
    "typecheck": "tsc -p . --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dorayakikun/template_ts.git"
  },
  "keywords": [
    "template",
    "typescript"
  ],
  "author": "dorayakikun <amakunai.dorayaki@gmaill.com> (https://medium.com/@dorayakikun)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dorayakikun/template_ts/issues"
  },
  "homepage": "https://github.com/dorayakikun/template_ts#readme",
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^24.0.0",
    "jest-junit": "^6.3.0",
    "prettier": "^1.15.2",
    "ts-jest": "^24.0.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "verbose": true
  }
}
